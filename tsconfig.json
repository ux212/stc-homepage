{
  "compilerOptions": {
    "target": "es2016",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "noEmit": true,
    "incremental": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "baseUrl": "./",
    "paths": {
      "@src/*": ["./src/*"],
      "@pages/*": ["./pages/*"],
      "@public/*": ["./public/*"]
    },
    "module": "esnext"
  },
  "include": ["next-env.d.ts", "**/*.**.ts", "**/*.**.tsx", "**/*.tsx"],
  "exclude": ["node_modules"]
}
